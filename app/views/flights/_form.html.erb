<%= form_with(model: [ @itinerary, @flight ], local: true, class: 'form p-4 rounded') do |form| %>
  <% if @flight.errors.any? %>
    <div class="alert alert-danger" id="error_explanation">
      <h2><%= pluralize(@flight.errors.count, "error") %> prohibited this flight from being saved:</h2>
      <ul>
        <% @flight.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :departure_time, class: 'form-label text-light' %>
    <%= form.datetime_local_field :departure_time, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :arrival_time, class: 'form-label text-light' %>
    <%= form.datetime_local_field :arrival_time, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :origin, class: 'form-label text-light' %>
    <%= form.text_field :origin, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :destination, class: 'form-label text-light' %>
    <%= form.text_field :destination, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :flight_number, class: 'form-label text-light' %>
    <%= form.text_field :flight_number, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>