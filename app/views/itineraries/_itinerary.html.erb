<div id="<%= dom_id(@itinerary) %>" class="container">
  <div style="width: 100%;">
    <h1>
      <%= @itinerary.name %>
    </h1>

    <h6>
      <strong>Flights:</strong>
      <%= @itinerary.flights.size %>
    </h6>
  </div>

  <%= link_to "Add flights", new_itinerary_flight_path(@itinerary), class: "btn btn-primary mb-4" %>
  <%= link_to "Edit", edit_itinerary_path(@itinerary), class: "btn btn-primary mb-4" %>

<div class="container mt-4">
  <div class="row">
    <% @itinerary.flights.each_with_index do |flight, index| %>
      <div class="col-12 mb-4">
        <%= link_to itinerary_flight_path(@itinerary, flight), class: 'card-link' do %>
          <div class="card w-100" style="background-color: <%= generate_light_color(index) %>;">
            <div class="card-body d-flex justify-content-between align-items-center">
              <div class="d-flex flex-column align-items-start">
                <h5 class="card-title mb-0"><%= flight.flight_number %></h5>
              </div>
              <div class="d-flex flex-column align-items-center">
                <small class="text-muted">Origin: <%= flight.origin %></small>
                <small class="text-muted">Departure: <%= flight.destination %></small>
              </div>
              <div class="d-flex flex-column align-items-end">
                <small class="text-muted">Departure: <%= flight.departure_time.strftime('%B %d, %Y') %></small>
                <small class="text-muted">Arrival: <%= flight.arrival_time.strftime('%B %d, %Y') %></small>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>